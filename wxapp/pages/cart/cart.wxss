.cart_item{
  display: flex;
  justify-content: space-between;
  
}
.cart_item image{
  width: 180rpx;
  height: 200rpx;
}
.cart_box{
  padding: 20rpx;
  /* background-color: red; */
  border-bottom: 1px solid #eee;

}

.cart_item_midd{
  /* background-color: orange; */
  flex: 80%;
  text-align: left;
}
.cart_item_left{
  /* background-color: yellow; */
  flex: 40%;
  
}
.cart_item_right{
  /* background-color: rgb(171, 233, 195); */
